generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  username String @unique
  email     String   @unique
  password      String
  answers AssessmentAnswer[] @relation("answers")
}

model Question {
  id Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title String
  category Int 
  opciones Opcion[]
  

}

model Opcion {
  id Int @id @default(autoincrement())
  question Question @relation(fields: [questionId], references: [id])
  questionId Int
  createdAt DateTime @default(now())
  opcion String
}

model AssessmentAnswer {
id Int      @id @default(autoincrement())
user User @relation("answers", fields: [userId], references: [id])
userId Int
createdAt DateTime @default(now())
incomes Incomes @default(Fijos)
percentfixedoutcomes Float
percentessentialoutcomes Float
percentexpendableoutcomes Float
objective1 Objective1 @default(SalirDeDeudas)
objective2 Objective2 @default(Ahorrar)
objective3 Objective3 @default(AdministrarMisFinanzas)
}

enum Incomes {
  Fijos
  SoyAutonomo
  EstoyEnElParo
}
enum Objective1 {
  SalirDeDeudas
  Ahorrar
  AdministrarMisFinanzas
}
enum Objective2 {
  SalirDeDeudas
  Ahorrar
  AdministrarMisFinanzas
}
enum Objective3 {
  SalirDeDeudas
  Ahorrar
  AdministrarMisFinanzas
}